<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".general.LoginActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAddTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange_400"
            android:theme="@style/AppTheme.PopupOverlay"
            app:title="Cubicle"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/login"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textColor="@color/deep_orange_400"
            android:text="Login"/>

        <EditText
            android:id="@+id/username"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="center_vertical"
            android:hint="Username"
            android:padding="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="343dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:padding="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="412dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/RememberSwitch"
            android:layout_marginStart="5dp"
            android:buttonTint="@color/deep_orange_400"
            android:gravity="end"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:id="@+id/login_button"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_marginStart="10dp"
                android:layout_margin="20dp"
                android:textSize="15dp"
                android:backgroundTint="@color/orange_400"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
